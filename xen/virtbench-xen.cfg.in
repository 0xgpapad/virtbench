import string

name        = '@NAME@'
kernel      = '@KERNEL@'
root        = '/dev/xvda1 rw'
extra       = "init=/virtclient eth0 %s" % string.replace('@IP@', '.', '/')
memory      = 128
vcpus       = 1
disk        = [ 'file:@BLOCK@,xvda1,w' ]
vif         = [ 'ip=@IP@' ]
on_poweroff = 'destroy'
on_reboot   = 'destroy'
on_crash    = 'destroy'

